<Window x:Class="totalComander.createFolderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:totalComander"
        mc:Ignorable="d"
        Title="Create folder" Height="150" Width="300" 
        ResizeMode="NoResize">
    <Grid VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Label VerticalAlignment="Center" Content="Folder name:" Grid.Row="0" Margin="0 10 0 0"/>
        <TextBox x:Name="inputBox" VerticalAlignment="Center" Grid.Row="1" Margin="5" Height="20"/>
        <StackPanel VerticalAlignment="Center" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="Create" Width="70"  Margin="0 0 5 0" Click="createClicked"/>
            <Button Content="Cancle" Width="70"  Click="cancleClicked"/>
        </StackPanel>
    </Grid>
</Window>
