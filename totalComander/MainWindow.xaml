<Window x:Class="totalComander.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:totalComander"
        mc:Ignorable="d"
        Title="totalComander" Height="600" Width="1000"
        MinHeight="200" MinWidth="300"
        Loaded="windowLoaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <local:fileListView x:Name="leftList" Grid.Column="0" Margin="5" PreviewMouseLeftButtonDown="selectView"/>
        <local:fileListView x:Name="rightList" Grid.Column="1" Margin="5" PreviewMouseLeftButtonDown="selectView"/>
    </Grid>
</Window>
